

<h1>Movie Text Alert Landing Page</h1>

<h2>Sign Up</h1>
<%#= render 'form' %>

<div id="signUpModal" class="reveal-modal" data-reveal>
	<p>Sign Up</p>
	<%= form_for @user do |f| %>
		<%= f.text_field :name, placeholder: "Name" %><br />
		<%= f.text_field :email, placeholder: "Email" %><br />
		<%= f.password_field :password, placeholder: "Password" %><br />
		<%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %><br />
		<%= f.text_field :phone, placeholder: "Phone Number" %><br />
		<%= f.submit "Submit" %>
	<% end %>
	<a class="close-reveal-modal">Ã—</a>
</div>

<div id="loginModal" class="reveal-modal" data-reveal>
	<p>Log In</p>
	<%= form_for @user, {url: session_path} do |f| %>
		<%= f.text_field :email, placeholder: "your email address.." %><br />
		<%= f.password_field :password, placeholder: "password ..." %><br />
		<%= f.submit "Log In" %>
	<% end %>
</div>

<a href="#" data-reveal-id="signUpModal" class="radius button">Sign Up</a>
<a href="#" data-reveal-id="loginModal" class="radius button">Login</a>

